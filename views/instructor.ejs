<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Instructor Panel</title>
  <link rel="stylesheet" href="/styles.css">
  <script defer src="/scripts/instructor.js"></script>
</head>
<body>
  <div class="container">
    <h1>Instructor Panel</h1>

    <!-- Filter Submissions -->
    <section>
      <h2>Filter Submissions</h2>
      <select id="assignmentDropdown" onchange="fetchSubmissionStatus()">
        <option value="">Select Assignment</option>
        <!-- Options will be populated dynamically -->
      </select>
      <button id="filterSubmissions">Filter</button>
    </section>

    <!-- Submission Status for Selected Assignment -->
    <section>
      <h2>Submission Status</h2>
      <table>
        <thead>
          <tr>
            <th>Student</th>
            <th>Submission Status</th>
          </tr>
        </thead>
        <tbody id="submissionStatusTableBody"></tbody>
      </table>
    </section>

    <!-- Grade Submissions -->
    <section>
      <h2>Grade Submissions</h2>
      <table>
        <thead>
          <tr>
            <th>Assignment</th>
            <th>Student</th>
            <th>Submission</th>
            <th>Grade</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="submissionsTableBody"></tbody>
      </table>
    </section>

    <!-- Create Assignment -->
    <section>
      <h2>Create Assignment</h2>
      <form id="createAssignmentForm">
        <input id="assignmentTitle" placeholder="Assignment Title" required />
        <input id="assignmentCourse" placeholder="Course" required />
        <button type="submit">Create Assignment</button>
      </form>
    </section>

    <!-- Lock Assignment -->
    <section>
      <h2>Lock Assignment</h2>
      <button onclick="lockAssignment()">Lock Selected Assignment</button>
    </section>

  </div>
</body>
</html>